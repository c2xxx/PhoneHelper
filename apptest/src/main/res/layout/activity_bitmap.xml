<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_root_view"
        android:layout_width="@dimen/dimen_960dp"
        android:layout_height="@dimen/dimen_540dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_bitmap_test_click_01"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_margin="@dimen/dimen_50dp"
            android:text="click set" />

        <Button
            android:id="@+id/btn_bitmap_test_click_02"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_margin="@dimen/dimen_50dp"
            android:text="click set null" />

        <Button
            android:id="@+id/btn_bitmap_test_click_03"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_margin="@dimen/dimen_50dp"
            android:text="click start" />

        <Button
            android:id="@+id/btn_bitmap_test_click_04"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_margin="@dimen/dimen_50dp"
            android:text="click recycle" />

        <Button
            android:id="@+id/btn_bitmap_test_click_05"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_margin="@dimen/dimen_50dp"
            android:text="click log" />

    </LinearLayout>
</RelativeLayout>